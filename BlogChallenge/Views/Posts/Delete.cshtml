@model BlogChallenge.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Post</h1>

<h3>@Html.DisplayFor(model => model.Title)</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.category
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>        
        <dd class="col-sm-10 text-center">
            <img src="@("~/image/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" class="img-thumbnail" />
        </dd>              
        <dd class="col-sm-10 text-justify">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
